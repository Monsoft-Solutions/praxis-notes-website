{
  "name": "praxis-note-website",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "owner": "Monsoft Solutions, LLC (https://monsoft.io)",
  "license": "Apache-2.0",
  "description": "Praxis Notes Website (https://praxisnotes.com)",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:force": "NEXT_SKIP_TYPECHECKING=1 next build",
    "type-check": "tsc --noEmit --skipLibCheck",
    "pre-commit-check": "pnpm type-check && pnpm lint && pnpm build:force",
    "prepare": "husky",
    "sitemap:copy": "node scripts/copySitemapToPublic.js",
    "sitemap:generate": "env-cmd node scripts/generateStaticSitemap.js",
    "sitemap:notify": "env-cmd node scripts/notifyGoogleAppRouter.js",
    "update-google-index": "env-cmd node scripts/update-google-index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx db/seed.ts",
    "db:seed:resources": "tsx db/seed-resources.ts",
    "db:seed:categories": "tsx db/seed-categories.ts",
    "db:setup": "pnpm db:generate && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@monsoft/google-indexing": "^0.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.4",
    "env-cmd": "^10.1.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^148.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.475.0",
    "next": "15.2.4",
    "next-sitemap": "^4.2.3",
    "pgvector": "^0.2.1",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.7",
    "xml2js": "^0.6.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.19.11",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.4.1"
}
